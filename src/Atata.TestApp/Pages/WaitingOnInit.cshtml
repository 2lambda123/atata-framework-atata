@page
@{
    ViewBag.Title = "Waiting on Init";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <span class="loading-block">Loading...</span>
        <span class="content-block" style="display: none"></span>
    </div>
</div>

<script>
    setTimeout(function () {
        $(".loading-block").hide();
        $(".content-block").text("Loaded").show();
    }, 2000);
</script>
