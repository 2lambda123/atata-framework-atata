@page
@{
    ViewBag.Title = "Local Date/Time Input";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label for="regular">Regular</label>
            <input id="regular" type="datetime-local" class="form-control" onchange="document.getElementById('regular-output').innerText = this.value;">
            <output id="regular-output"></output>
        </div>
    </div>
</div>
